datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id            String         @id @default(cuid())
  name          String
  isBreakout    Boolean        @default(false)
  hostId        String
  createdAt     DateTime       @default(now())
  breakoutRooms BreakoutRoom[]  // One-to-many relationship
}

model BreakoutRoom {
  id        String   @id @default(cuid())
  name      String
  parentId  String
  parent    Room     @relation(fields: [parentId], references: [id])
  createdAt DateTime @default(now())
}
